---
import Navbar from "./Navbar";
import Button from "../components/astro/ui/Button.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- SITE METADATAS: TITLE, DESCRIPTION, OG IMAGE, TWITTER IMAGE -->
    <title>Mario Serano | Frontend Developer Based in Jakarta, Indonesia</title>
    <meta
      name="description"
      content="Mario Serano is a frontend developer that focuses on working products that brings impact directly to user."
    />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://marioserano.com" />
    <meta
      property="og:title"
      content="Mario Serano | Frontend Developer Based in Jakarta, Indonesia"
    />
    <meta
      property="og:description"
      content="Mario Serano is a frontend developer that focuses on working products that brings impact directly to user."
    />
    <meta
      property="og:image"
      content="https://marioserano.com/metadata/og-image.png"
    />
    <meta property="og:image:type" content="image/png" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://marioserano.com" />
    <meta
      property="twitter:title"
      content="Mario Serano | Frontend Developer Based in Jakarta, Indonesia"
    />
    <meta property="twitter:site" content="@itsmarioserano" />
    <meta property="twitter:creator" content="@itsmarioserano" />
    <meta
      property="twitter:description"
      content="Mario Serano is a frontend developer that focuses on working products that brings impact directly to user."
    />
    <meta
      property="twitter:image"
      content="https://marioserano.com/metadata/og-image.png"
    />
    <!-- END SITE METADATAS -->
    <link rel="apple-touch-icon" sizes="57x57" href="/apple-icon-57x57.png" />
    <link rel="apple-touch-icon" sizes="60x60" href="/apple-icon-60x60.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="/apple-icon-72x72.png" />
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-icon-76x76.png" />
    <link
      rel="apple-touch-icon"
      sizes="114x114"
      href="/apple-icon-114x114.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="120x120"
      href="/apple-icon-120x120.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="144x144"
      href="/apple-icon-144x144.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="152x152"
      href="/apple-icon-152x152.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-icon-180x180.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/android-icon-192x192.png"
    />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png" />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body>
    <Navbar client:load>
      <Button class="w-full xl:w-[unset]">Hire me!</Button>
    </Navbar>
    <main class="pt-18">
      <slot />
    </main>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Inter";
    src: url("/fonts/Inter-Regular.ttf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Inter";
    src: url("/fonts/Inter-Medium.ttf");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Inter";
    src: url("/fonts/Inter-SemiBold.ttf");
    font-weight: 600;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Inter";
    src: url("/fonts/Inter-Bold.ttf");
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }

  html {
    font-family: "Inter", sans-serif;
    scroll-behavior: smooth;
  }
</style>
