---
import { Image } from "astro:assets";

import mainPic from "../assets/hero/main-pic.webp";
import Button from "../components/astro/ui/Button.astro";
import Blob from "../components/astro/ui/Blob.astro";
---

<div class="w-full bg-primary-prussian-blue flex justify-center">
  <div
    class="max-w-desktop w-full overflow-hidden flex flex-col px-0 md:px-layout xl:flex-row xl:h-[43.5rem] xl:space-x-9 xl:justify-between"
  >
    <div
      class="flex flex-col pt-56 items-center justify-between h-[40rem] pb-8 px-4 md:justify-start md:h-[unset] md:min-h-0 md:py-40 xl:pt-40 xl:items-start xl:flex-1 xl:flex-shrink-[0.7]"
    >
      <div class="text-white text-center xl:text-left">
        <h1 class="font-bold text-h5 md:text-h1">Mario Serano</h1>
        <p
          class="flex items-center space-x-3 justify-center mt-2 md:mt-3 md:text-p1 xl:justify-start"
        >
          <span>frontend developer</span><span
            class="w-1 h-1 min-w-[0.25rem] min-h-[0.25rem] rounded-full bg-white"
          ></span><span
            >&#102;&#114;&#652;&#110;&#116;&#32;&#603;&#110;&#100;&#32;&#100;&#618;&#712;&#118;&#603;&#108;&#601;&#112;&#601;</span
          >
        </p>
        <p class="text-p2 mt-4 md:text-p1 md:mt-6">
          I build websites that works and looks stunning in all platforms.
        </p>
      </div>
      <div
        class="w-full flex flex-col justify-center mt-[10.125rem] space-y-2 md:space-y-0 md:space-x-6 md:flex-row md:mt-6 xl:justify-start"
      >
        <Button class="w-full md:w-[unset]">See my work</Button>
        <Button class="w-full md:w-[unset]" theme="secondary">
          Contact me
        </Button>
      </div>
    </div>
    <div
      class="relative flex items-end min-h-[43.75rem] max-h-screen px-4 xl:flex-1 xl:flex-shrink-[0.3]"
    >
      <div class="absolute w-full h-full">
        <div class="absolute z-10 w-[150px] md:w-[300px] top-0 left-0">
          <Blob variant="one" />
        </div>
        <div class="absolute w-[250px] md:w-[500px] top-48 -left-20">
          <Blob variant="two" />
        </div>
        <div
          class="absolute w-[250px] md:w-[500px] top-0 right-0 md:top-32 md:-right-28"
        >
          <Blob variant="three" />
        </div>
      </div>
      <img
        src={mainPic.src}
        alt="Mario Serano's Photo"
        width={mainPic.width}
        height={mainPic.height}
        class="absolute top-0 left-0 w-full z-10 h-full object-cover object-top"
      />
    </div>
  </div>
</div>
